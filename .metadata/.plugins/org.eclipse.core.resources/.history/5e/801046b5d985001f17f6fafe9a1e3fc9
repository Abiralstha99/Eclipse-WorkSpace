
public class Turtle {

	public static void main(String[] args) {
		
		initialSetup ();
		sleep (0.5);
		
		
	}
	
	public static void initialSetup ()
	{
		int  leftSpace  = 7;
		int  rightSpace = 7;
		String turtle     = "T";
		
		String river = "|";
		
		for (int i = 0; i < leftSpace; i++)
		{
			river += " ";
		}
		
		river += turtle;
		
		for (int i = 0; i < rightSpace; i++)
		{
			river += " ";
		}
		
		river += "|";
		
		System.out.println(river);
	}
	
	public static void swim ()
	{
		int leftSpace = (int) ( 8 * Math.random() );
		int rightSpace = (int) ( 8 * Math.random() );
		
		String turtle     = "T";
		
		String river = "|";
		
		for (int i = 0; i < leftSpace; i++)
		{
			river += " ";
		}
		
		river += turtle;
		
		for (int i = 0; i < rightSpace; i++)
		{
			river += " ";
		}
		
		river += "|";
		
		System.out.println(river);
	} 
}
